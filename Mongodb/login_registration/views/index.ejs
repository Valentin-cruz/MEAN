<!doctype html>
<html lang="en">
    <head>
        <title>Login_Reg</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
        
        <div class="container col-xl-4">
            <div class="leftpanel">
                <h1><u>Registration</u></h1>
                <form action="/register" method="post">
                    <h4>First Name: <input class="fields" type="text" name="firstName"></h4>
                    <h4>Last Name: <input class="fields" type="text" name="lastName"></h4>
                    <h4>Email: <input class="fields" type="text" name="email"></h4>
                    <h4>Birthday: <input class="bday" class="fields" type="date" name="birthday"></h4>
                    <h4>Password: <input id="pad" class="fields" type="text" name="password"></h4>
                    <h4>Confirm Password: <input class="fields" type="text" name="confirm_password"></h4>
                    <input class="fields btn btn-primary" type="submit" value="Register">
                </form>
                <% if(messages.regform) { %>
                    <% for (var x of messages.regform) { %>
                        <div>
                            <p class="alert alert-danger size" role="alert"><%= x %></p>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <div class="rightpanel">
                <h1><u>Login</u></h1>
                <form action="post" method="post">
                    <h4>Email: <input class="fields" type="text" name="email"></h4>
                    <h4>Password: <input class="fields" type="text" name="password"></h4>
                    <input class="fields btn btn-success" type="submit" value="Login">
                </form>
            </div>
        </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>